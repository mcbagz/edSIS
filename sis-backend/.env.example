# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sis_db"

# JWT Secret
JWT_SECRET="your_jwt_secret_here"

# AWS Configuration for S3 Document Upload
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_S3_BUCKET_NAME="sis-application-documents"

# AWS SES Configuration for Email
AWS_SES_FROM_EMAIL="noreply@yourschool.edu"

# Ed-Fi ODS API Configuration
EDFI_API_BASE_URL="https://localhost/api"
EDFI_API_CLIENT_ID="your_edfi_client_id"
EDFI_API_CLIENT_SECRET="your_edfi_client_secret"

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"